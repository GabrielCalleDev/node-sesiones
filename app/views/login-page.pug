doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous")
    link(rel='stylesheet', href='/css/style.css')
  body
    .container
      .wrapper.fadeInDown
        #formContent
          // Tabs Titles
          // Icon
          .fadeIn.first
            img#icon(src='/img/logo.png' alt='User Icon')
          // Login Form
          form(method='post' action='/login')
            input#login.fadeIn.second(type='text' name='usuario' placeholder='login')
            input#password.fadeIn.third(type='text' name='password' placeholder='password')
            input.fadeIn.fourth(type='submit' value='Log In')
          // Remind Passowrd
          #formFooter
            a.underlineHover(href='#') Forgot Password?
    script(src="/js/jquery-3.6.0.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
    script(src="https://code.jquery.com/jquery-3.2.1.min.js" crossorigin="anonymous")
