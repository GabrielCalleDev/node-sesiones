extends ../layout

block content
    .container.mb-3
        .row.justify-content-md-center
            .col-md-6
                h1.text-center Nuevo usuario
                form(method="post" action="/admin/save/user")
                    .mb-3
                        label.form-label(for='inputUsuario') Usuario
                        input#inputUsuario.form-control(type='text' name="usuario" placeholder="Introduce un usuario")
                    .mb-3
                        label.form-label(for='inputNombre') Nombre
                        input#inputNombre.form-control(type='text' name="nombre" placeholder="Introduce un nombre")
                    .mb-3
                        label.form-label(for='inputId') Id de usuario
                        input#inputId.form-control(type='number' name="id" placeholder="Introduce un id")
                    .mb-3
                        label.form-label(for='selectRol') Rol de usuario
                        select#selectRol.form-select(name="rol")
                            option(selected) Selecciona un rol
                            option(value='user') Usuario
                            option(value='admin') Administrador
                    .mb-3
                        label.form-label(for='inputPassword') Contrase√±a
                        input#inputPassword.form-control(type='password' name="password")
                    button.btn.btn-primary(type='submit') Registrar usuario
